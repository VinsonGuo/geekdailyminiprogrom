/**index.wxss**/

.container {
  background-color: #f2f2f2;
  min-height: 100% 
}
.swiper-container{
  width: 100%;
  position: relative; 
}
.swiper_box{
  width: 100%;
  height: 500rpx
}
 swiper-item image{
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 500rpx
} 
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center
}
.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
  transition: add .6s;
  opacity: 0.5
}
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}
.type-container{
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width:160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #e64340;
}
.categories-container{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
}
.categories-box{
  width: 100%;
  background-color: #fff;
  overflow: hidden;
}
.categories-title{
  font-size: 30rpx;
  margin: 10rpx
}
.categories-box2{
  display: flex;
  justify-content: flex-start;
  margin: 10rpx
}
.categories-author{
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}
.categories-time{
  font-size: 24rpx;
  color: #666;
}

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
