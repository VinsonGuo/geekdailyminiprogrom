<!--描述、标题、链接、图片、分类、等级-->
<view class='container'>
  <form class='form' bindsubmit='onFormSubmit'>
    <input class='input' focus='true' type='text' name="title" placeholder="标题" />
    <textarea class='input' style='height:200rpx' type='text' name="desc" placeholder="描述" />
    <input class='input' type='text' name="desc" placeholder="链接" />
    <view class='picker-container'>
      <picker bindchange="bindCategoryPickerChange" value="{{categoryIndex}}" range="{{categoryArray}}">
        <view class="picker">
          分类：{{categoryArray[categoryIndex]}}
        </view>
      </picker>
      <picker bindchange="bindLevelPickerChange" value="{{levelIndex}}" range="{{levelArray}}">
        <view class="picker">
          级别：{{levelArray[levelIndex]}}
        </view>
      </picker>
    </view>
    <view>
      <image class='image' mode='widthFix' src='{{imageUrl}}' bindtap='onImageClick'></image>
    </view>
    <button type='primary' form-type='submit'>上传</button>
  </form>
</view>