/* upload.wxss */

.container {
  width: 100%;
  background-color: #eee;
}

.image {
  margin-top: 8rpx;
  width: 300rpx;
  margin-left: 120rpx;
  background-color: #fff;
}

.input-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input-top {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.des-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.link-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}


.image-image {
  width: 60%;
  margin-right: 15rpx;
  align-items: center;
}

.category-container {
  display: flex;
  align-items: center;
}

.level-container {
  display: flex;
  align-items: center;
}

.picker-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 100rpx;
}

.radio-group-level {
  display: flex;
  flex-direction: row;
}

.radio-level {
  display: block;
  padding: 5px;
}

.form {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.textarea {
  border: 1px #000 solid;
  width: 100%;
  height: 1.4em;
  margin-right: 15rpx;
  background-color: #fff;
  padding-bottom: 5px;
  padding-top: 5px;
  padding-left: 2px;
}
.division {
  height: 25rpx;
}

.image-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.small-button{
  font-size: 16px;
  height: 34px;
  line-height: 34px;
}
