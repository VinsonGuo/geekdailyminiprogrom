/**index.wxss**/

.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.article-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
}

.article-date{
  padding: 4rpx 20rpx;
  font-size: 40rpx;
}

.article-item {
  width:100%;
}

.article-box {
  padding: 4rpx 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.article-left{
  width: 60%;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.article-title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 40rpx;
  padding: 10rpx;
}

.article-des {
  width: 100%;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #666;
  font-size: 30rpx;
  padding: 10rpx;
}

.article-right{
  width: 40%;
  height: 260rpx; 
  padding: 20rpx;
}
.article-img{
  width: 90%; 
  height: 90%;
  margin: 20rpx;
}

.article-box2 {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
}

.article-author {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}

.article-time {
  font-size: 24rpx;
  color: #666;
}

.article-box3 {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
}

.article-comments {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}

.article-stars {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}
.article-view {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}


/*  加载更多   */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}


.round-click{
    height: 120rpx;
    width: 120rpx;
    background-color: #e64340;
    border-radius: 100%;
    position: fixed;
    bottom: 50rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.search-icon{
  width: 50rpx;
  height: 50rpx;
}
.round-click navigator{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}
