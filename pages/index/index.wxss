/**index.wxss**/

.container {
  background-color: #eee;
  min-height: 100%;
}

.article-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
}

.article-date{
  padding: 10rpx 10rpx;
  font-size: 40rpx;
  border-top:1px solid #ddd;
  background: white
}

.article-item {
  width:100%;
}

.article-left{
  width: 60%;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.article-box-vertical {
  padding: 16rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
  margin-bottom: 20rpx;
}
.article-top{
  width: 100%;
  display: flex;
}
.article-middle{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.article-bottom{
  width: 100%;
  padding-top: 16rpx;
  display: flex;
}
.article-title {
  font-size: 40rpx;
  padding: 10rpx;
}

.article-des {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #666;
  font-size: 30rpx;
  padding: 0 10rpx;
}

.article-right{
  width: 40%;
  height: 260rpx; 
  padding: 20rpx;
}
.article-img{
  width:100%;
}

.article-box2 {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
}

.article-author {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}

.article-time {
  font-size: 24rpx;
  color: #666;
}

.article-box3 {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
}

.article-comments {
  font-size: 28rpx;
  margin-right: 20rpx;
  color: #999;
}

.article-stars {
  flex: 1;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}
.article-view {
  flex:1;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  border-right:1px solid #ccc;
}


/*  加载更多   */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}


