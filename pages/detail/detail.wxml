<view class="container">
  <view class="container-top">
    <view>
      <image class='avatar' src='{{article.user.avatar}}'></image>{{article.user.nick_name + ': '+article.des}}
    </view>
    <view class='article-time'>{{article.category+'  '+'分享于'+article.date}}</view>
    <image wx:if="{{article.img_url}}" class='article-image' mode='widthFix' lazy-load src='{{article.img_url}}'></image>
    <view class='container-link'>
      <view>{{'↓ 来源地址，请点击复制'}}</view>
      <view class='article-link' bindtap='copyText' data-text="{{article.link}}">{{article.link}}</view>
    </view>
  </view>

  <van-progress wx:if="{{false}}" custom-class="progress" percentage="{{starProgress}}" />
  <view wx:if="{{false}}" class='star-container'>
    <button class='star-progress' bindtap='likeTap'>顶</button>
    <view style="flex:1"> </view>
    <button class='star-progress' bindtap='dislikeTap'>踩</button>
  </view>

  <wemark style="border-top:4rpx solid #999;" md="{{md}}" link="true" highlight="true" type="wemark"></wemark>

  <!--收藏按钮  -->
  <view wx:if="{{isScrollUp}}" class="round-click" bindtap='toStar'>
    <zan-icon type="{{starStatus==0?'like-o':'like'}}"></zan-icon>
  </view>


