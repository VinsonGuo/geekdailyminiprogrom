<view class="markdown">
  <view class="container-top">
    <text class='article-des' wx:if="{{article.des}}">{{article.user.nick_name + ': '+article.des}}</text>
    <view class='article-time'>{{'分享于 '+article.date}}</view>
    <image wx:if="{{article.img_url}}" class='article-image' mode='widthFix' lazy-load src='{{article.img_url}}'></image>
    <view class='container-link'>
      <view class='article-time'>{{'↓ 来源地址，请点击复制'}}</view>
      <view class='article-link' bindtap='copyText' data-text="{{article.link}}">{{article.link}}</view>
    </view>


  </view>

  <wemark style="border-top:4rpx solid #999;" md="{{md}}" link="true" highlight="true" type="wemark"></wemark>

  <view class='star-container'>
  <text bindtap='likeTap'>顶</text>
  <van-progress custom-class="progress" percentage="{{starProgress}}" />
  <text bindtap='dislikeTap'>踩</text>
  </view>

  <!--收藏按钮  -->
  <view wx:if="{{isScrollUp}}" class="round-click" bindtap='toStar'>
    <zan-icon type="{{starStatus==0?'like-o':'like'}}"></zan-icon>
  </view>


