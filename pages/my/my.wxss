.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden
}
.userInfo{
  display: flex;
  flex-direction: column;
  /* padding: 50rpx; */
  align-items: center;
  background: #e85654;
  width: 100%;
  height: 300rpx;
}
.userinfo-avatar{
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%
}
.userinfo-nickname{
  margin-top: 15rpx;
  color: #FFF
}
.my-item{
  width: 100%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
  background-size: 16rpx auto,750rpx auto;
  margin: 15rpx 0;
  border-bottom: 1px solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
}
.reload{
  width: 100%;
  color: #fff;
}
