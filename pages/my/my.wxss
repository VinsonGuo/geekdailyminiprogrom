.container {
  min-height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #eee;
  overflow-y: hidden;
}

.userInfo {
  display: flex;
  flex-direction: row;
  /* padding: 50rpx; */
  align-items: center;
  width: 100%;
  height: 200rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.login-button{
  width: 140rpx;
  margin-right: 30rpx;
}


.userinfo-nickname {
  color: #000;
  flex:1;
}

.article-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
}

.article-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #eee;
  overflow: hidden;
  padding: 0 20rpx;
}

.article-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.article-title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 40rpx;
  margin: 10rpx;
}

.article-des {
  width: 100%;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  font-size: 30rpx;
  margin: 10rpx;
}

.article-box2 {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
}

.article-author {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}

.article-time {
  font-size: 24rpx;
  color: #666;
}
