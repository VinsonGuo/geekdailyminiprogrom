.container {
  min-height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #eee;
  overflow-y: hidden;
}

.userInfo {
  display: flex;
  flex-direction: row;
  /* padding: 50rpx; */
  align-items: center;
  width: 100%;
  height: 200rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.login-button {
  width: 140rpx;
  margin-right: 30rpx;
}

.userinfo-nickname {
  color: #000;
  flex: 1;
}

.article-container {
  width: 94%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 0 auto;
  box-sizing: content-box;
  margin-top: 20rpx;
}

.article-box {
  width: 100%;
  padding: 6rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.article-item {
  width: 100%;
}

.article-title {
  font-size: 35rpx;
  padding: 10rpx;
}

.article-des {
  width: 100%;
  color: #666;
  font-size: 30rpx;
  -webkit-line-clamp: 6;
  margin: 6rpx;
}

.article-box2 {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
}

.article-author {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}

.article-time {
  font-size: 24rpx;
  color: #666;
}
