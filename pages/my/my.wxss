.container{
  min-height: 100%;
  width: 100%;
  overflow: hidden;
  overflow-y: hidden
}
.userInfo{
  display: flex;
  flex-direction: column;
  /* padding: 50rpx; */
  align-items: center;
  background: #33cd5f;
  width: 100%;
  height: 300rpx;
}
.userinfo-avatar{
  width: 160rpx;
  height: 160rpx;
  margin: 40rpx;
  border-radius: 50%
}
.userinfo-nickname{
  color: #FFF
}
.my-item{
  width: 100%;
  padding: 15rpx 0;
  border-bottom: 1px solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
}
.reload{
  margin: 60rpx 16rpx;
}

.article-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
}

.article-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  overflow: hidden;
  padding: 0 20rpx;
}

.article-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.article-title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 40rpx;
  margin: 10rpx;
}

.article-des {
  width: 100%;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  font-size: 30rpx;
  margin: 10rpx;
}
.article-box2 {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
}

.article-author {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}

.article-time {
  font-size: 24rpx;
  color: #666;
}
