.container {
  background-color: #eee;
  min-height: 100%;
}

.article-container {
  width: 94%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 0 auto;
  box-sizing: content-box;
  margin-top: 100rpx;
}

.article-box {
  width: 100%;
  padding: 6rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.article-item {
  width: 100%;
}

.article-title {
  font-size: 35rpx;
  padding: 10rpx;
}

.article-des {
  width: 100%;
  color: #666;
  font-size: 30rpx;
  -webkit-line-clamp: 6;
  margin: 6rpx;
}

.article-box2 {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
}

.article-author {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #666;
}

.article-time {
  font-size: 24rpx;
  color: #666;
}

.search-view {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
}
